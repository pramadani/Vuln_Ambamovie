{
  "compilerOptions": {
    "target": "ES2020",                        // Menargetkan ES2020 (atau lebih baru)
    "module": "ESNext",                        // Menyusun modul menggunakan ESNext
    "moduleResolution": "node",                // Menggunakan resolusi modul ala Node.js
    "strict": true,                            // Mengaktifkan pemeriksaan ketat (strict type-checking)
    "esModuleInterop": true,                   // Mengaktifkan interoperabilitas ES6 module dengan CommonJS
    "skipLibCheck": true,                      // Melewatkan pemeriksaan tipe di file .d.ts
    "forceConsistentCasingInFileNames": true,  // Memastikan konsistensi casing dalam nama file
    "outDir": "./dist",                        // Output hasil kompilasi ke folder dist
    "baseUrl": "./src",                        // Direktori dasar untuk modul impor
    "paths": {
      "@app/*": ["src/app/*"]                  // Menyediakan alias untuk jalur file tertentu
    },
    "allowJs": true,                           // Mengizinkan file JavaScript dalam proyek
    "skipDefaultLibCheck": true,               // Mengabaikan pemeriksaan file pustaka bawaan
    "resolveJsonModule": true,                 // Mengizinkan impor file JSON sebagai modul
    "downlevelIteration": true,                // Mendukung iterasi untuk generator dan async iterable
    "lib": ["ES2020", "DOM"]                   // Menyertakan pustaka ES2020 dan DOM
  },
  "include": [
    "src/**/*"                                  // Menyertakan semua file di dalam direktori src
  ],
  "exclude": [
    "node_modules",                             // Mengecualikan node_modules dari kompilasi
    "dist"                                      // Mengecualikan folder dist dari kompilasi
  ]
}
